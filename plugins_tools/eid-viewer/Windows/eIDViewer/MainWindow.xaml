<Window x:Class="eIDViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="216" Margin="10,33,0,0" VerticalAlignment="Top" Width="497">
            <TabItem Header="Identity">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Card/PIN">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Certificates">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Log">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Menu HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <MenuItem Header="File">
                <MenuItem Header="Open.."/>
                <MenuItem Header="Save as.." IsEnabled="False"/>
                <MenuItem Header="Close" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="Preferences.."/>
                <Separator/>
                <MenuItem Header="Print.." IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="Quit" Click="ExitMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Language">
                <MenuItem Header="Deutch"/>
                <MenuItem Header="English"/>
                <MenuItem Header="Français"/>
                <MenuItem Header="Nederlands"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About.."/>
                <Separator/>
                <MenuItem Header="Frequently asked questions.."/>
                <Separator/>
                <MenuItem Header="Testsite for eID.."/>
                <Separator/>
                <MenuItem Header="Show Log Tab" IsCheckable="True" InputGestureText="Ctrl+L"/>
            </MenuItem>
        </Menu>
        <Grid HorizontalAlignment="Left" Height="55" Margin="10,254,0,0" VerticalAlignment="Top" Width="497">
            <Image HorizontalAlignment="Right" Height="55" Margin="397,0,0,0" VerticalAlignment="Top" Width="100" Source="Resources/state_noreaders.png"/>
            <Image HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="100" Source="Resources/print.png" IsEnabled="False"/>
        </Grid>

    </Grid>
</Window>
